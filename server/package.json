{
  "name": "mobile-code-server",
  "version": "1.0.0",
  "description": "A mobile platform to prepare for technical coding interviews.",
  "main": "index.js",
  "scripts": {
    "start": "echo \"starting in development...\" && npm run dev:cache && npm run dev:nodemon",
    "start:prod": "echo \"starting in production\" && npm run prod:build && npm run prod:node",
    "dev:cache": "rm -rf src/cache && mkdir src/cache",
    "dev:nodemon": "nodemon --watch \"src/**/*\" --ignore \"src/cache/**/*\" --ext \"*\" --exec \"export DEBUG=server && ts-node -r tsconfig-paths/register src/index.ts\"",
    "prod:build": "rm -rf dist && tsc && npm run prod:copy && npm run prod:cache",
    "prod:copy": "cp -r src/problems dist",
    "prod:cache": "rm -rf dist/cache && mkdir dist/cache",
    "prod:node": "export DEBUG=server && node -r module-alias/register dist/index.js",
    "lint": "eslint src --ext .ts,.js",
    "prettier": "prettier --check \"src/**/*.{ts,js}\"",
    "test": "jest src",
    "test:prod": "jest dist"
  },
  "_moduleAliases": {
    "@root": "dist"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)"
    ],
    "moduleNameMapper": {
      "^@root/(.*)$": "<rootDir>/src/$1"
    }
  },
  "pre-commit": [
    "test"
  ],
  "author": "Carlos Rivas",
  "license": "ISC",
  "dependencies": {
    "debug": "^4.3.2",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "module-alias": "^2.2.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "nodemon": "^2.0.14",
    "pre-commit": "^1.2.2",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  }
}
